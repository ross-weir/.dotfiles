mkcd() { mkdir $1;cd $1; }
findfont() { echo "$(fc-list : family | grep $1 | tail -1)"; }
cpfile() { xclip -sel clip < $1; }

alias dc="docker-compose"
alias ..="cd .."
alias .2="cd ../../"
alias .3="cd ../../../"
alias cl="clear"
alias cx="chmod +x"
alias ex="exit"
alias mkcd=mkcd
alias findfont=findfont
alias cpfile=cpfile
alias nv="nvim"
alias rpyc="find . -name '*.pyc' -delete"
alias pes="pipenv shell"
alias ls="ls -lAi --group-directories-first --color='never'"
alias mbuild=make build-dev
alias mup=make start-dev
alias mshell=make bash
alias mdb=make psql

